<body>
  <header>
    <h1>אינסטה-Clone</h1>
  </header>

  <main>
    <section id="new-post-form">
      <h2>הוסף פוסט חדש</h2>
      <input type="text" id="postText" placeholder="מה תרצה לשתף?">
      <button onclick="addPost()">פרסם</button>
    </section>

    <section id="posts">
      <h2>הפוסטים שלך</h2>
      <!-- פוסטים יתווספו כאן -->
    </section>
  </main>

  <script>
    function addPost() {
      // קבלת הטקסט מהשדה
      const postText = document.getElementById('postText').value;

      // בדיקה אם השדה לא ריק
      if (postText.trim() === "") {
        alert("אנא כתוב משהו לפני הפרסום!");
        return;
      }

      // יצירת אלמנט פוסט חדש
      const postElement = document.createElement('div');
      postElement.className = 'post';
      postElement.innerHTML = `<p>${postText}</p>`;

      // הוספת הפוסט לקטע הפוסטים
      const postsSection = document.getElementById('posts');
      postsSection.appendChild(postElement);

      // ניקוי שדה הטקסט
      document.getElementById('postText').value = "";
    }
  </script>
</body>
